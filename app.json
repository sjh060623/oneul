{
  "expo": {
    "name": "다햇구나",
    "slug": "myapp-local",
    "version": "1.0.2",
    "scheme": "oneul",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "userInterfaceStyle": "automatic",
    "ios": {
      "bundleIdentifier": "com.sjh060623.oneul.app",
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "집 반경을 벗어났는지 확인하기 위해 위치를 사용해요.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "앱이 꺼져 있어도 출발 알림을 보내기 위해 위치를 사용해요.",
        "UIBackgroundModes": ["location", "fetch", "remote-notification"],
        "NSCameraUsageDescription": "기록에 사진을 추가하기 위해 카메라를 사용해요.",
        "NSPhotoLibraryUsageDescription": "기록에 사진을 추가하기 위해 사진을 사용해요."
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-notifications"
    ],
    "updates": {
      "enabled": false,
      "checkAutomatically": "NEVER",
      "fallbackToCacheTimeout": 0
    },
    "experiments": {
      "typedRoutes": true
    },
    "newArchEnabled": true,
    "extra": {
      "router": {}
    },
    "android": {
      "package": "com.sjh060623.oneul.app"
    }
  }
}
